@page
@model Main_Project.Pages.Feedbacks.Show_all_feedbackModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Feedbacks";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Login Data Table</h4>

            <div class="table-responsive">
               
                <table class="table table-bordered">

                    <tbody class="data">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Profile pic</th>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Feedback</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                     
                        @foreach (var feedback in Model.feedbacklist)
                        {
                            <tr class="data">
                                <input type="hidden" name="name" value="@feedback.feedbackid" />
                                <td>@feedback.feedbackid</td>
                                <td>
                                    <img src="/profile_pic/@feedback.profilepic" alt="image" />
                                </td>
                                <td>@feedback.UserName</td>
                                <td>@feedback.Email</td>
                                <td>
                                    <textarea class="form-control" rows="4">@feedback.feedback</textarea>
                                </td>
                                <td>
                                <a href="/Feedbacks/Delete_feedback?id=@feedback.feedbackid">
                                    <i style="color: red; font-size: 20px;" class="mdi mdi-delete"></i>
                                </a>

                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
