@page
@model Main_Project.Pages.Feedbacks.Delete_feedbackModel
@{

    Layout = "_AdminLayout";
    ViewData["Title"] = "Feedbacks";
}



<div>
    <h4>Delete Feedback</h4>
    <hr />


    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">User Login Data Table</h4>

                <div class="table-responsive">
                    <table class="table table-bordered">

                        <tbody class="data">
                        <thead>
                            <tr>
                                <th>Profile pic</th>
                                <td>
                                    <img src="/profile_pic/@Model.ProfilePic" alt="image" />
                                </td>
                            </tr>
                            <tr>
                                <th>User Name</th>
                                <td>@Model.UserName</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Feedback</th>
                                <td>
                                    <p>
                                            @Model.Feedback
                                    </p>
                                </td>
                            </tr>
                        </thead>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
<div>
    <a asp-page="./Show_all_feedback">Back to List</a>
</div>

<form method="post">
    <input type="hidden" name="FeedbackId" value="@Model.FeedbackId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>