@page
@model Main_Project.Pages.Admin.DetailsModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "User Full Details";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Details</h4>

            <div class="table-responsive">
                <table class="table table-dark" style="margin:10px 0 10px 0;">
                    <tbody>
                        <tr>
                            <th>User Name</th>
                            <td>@Model.user.fullname</td>
                        </tr>

                        <tr>
                            <th>Email</th>
                            <td>@Model.user.email</td>
                        </tr>

                        <tr>
                            <th>Phone</th>
                            <td>@Model.user.phone</td>
                        </tr>
                                             

                        <tr>
                            <th>Isactive</th>
                            <td>@Model.user.isactive</td>
                        </tr>

                        <tr>
                            <th>Plane Price</th>
                            <td>@Model.user.price3</td>
                        </tr>

                        <tr>
                            <th>Date & Time</th>
                            <td>@Model.user.datetime3</td>
                        </tr>

                        <tr>
                            <th>Plane Duration</th>
                            <td>@Model.user.duration3</td>
                        </tr>

                        <tr>
                            <th>Payment method</th>
                            <td>@Model.user.paymentmethod</td>
                        </tr>

                        <tr>
                            <th>User Role</th>
                            <td>@Model.user.role</td>
                        </tr>
                        <tr>
                            <th>User Login 1 Time</th>
                            <td>@Model.user.logintime</td>
                        </tr>
                        <tr>
                            <th>User Login 1 Time</th>
                            <td>@Model.user.profilepic</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@Model.user.gender</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@Model.user.dob</td>
                        </tr>

                    </tbody>
                    <a href="/Admin/Login_data">Back to list</a>
                </table>
            </div>
        </div>
    </div>
</div>
