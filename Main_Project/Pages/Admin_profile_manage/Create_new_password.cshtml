@page
@model Main_Project.Pages.Admin_profile_manage.Create_new_passwordModel
@{
}

<head>
    <link href="/css/Resate_password.css" rel="stylesheet" />

    <link rel="stylesheet" href="/assets/vendors/mdi/css/materialdesignicons.min.css">
</head>

<header>
    <img src="/image/web_logo.png" alt="Alternate Text" onclick="redirectTodeshbord()" />
</header>
<div class="send_otp_div">
    <h1>Set New Password</h1>
    <form id="resetPasswordForm" method="post">
        <div class="form-group">
            <label for="NewPassword" class="control-label">Create New Password</label>
            <input id="NewPassword" name="NewPassword" class="form-control" type="password" />
            <span id="mdi-eye1" class="mdi mdi-eye" onclick="togglePasswordVisibility()"></span>
            <span id="eye-closed1" class="mdi mdi-eye-closed" style="display:none;" onclick="togglePasswordVisibility()"></span>
        </div>


        <div class="form-group">
            <label for="ConfirmPassword" class="control-label">Confirm Password</label>
            <input id="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" />

            <span onclick="showforgotepassword2()" id="mdi-eye2" class="mdi mdi-eye"></span>
            <span onclick="showforgotepassword2()" id="eye-closed2" class="mdi mdi-eye-closed"></span>
        </div>

        <button type="submit">Update Password</button>
    </form>
   
</div>

<script src="/js/script.js"></script>

<script>
    function togglePasswordVisibility() {
        const passwordInput = document.getElementById('NewPassword');
        const eyeOpen = document.getElementById('mdi-eye1');
        const eyeClosed = document.getElementById('eye-closed1');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            eyeOpen.style.display = 'none';
            eyeClosed.style.display = 'block';
        } else {
            passwordInput.type = 'password';
            eyeOpen.style.display = 'block';
            eyeClosed.style.display = 'none';
        }
    }
</script>
