@page
@model Main_Project.Pages.Profile_Pic_Manage.Pic_IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="/Profile_Pic_Manage/Pic_Insert">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Profile_pic[0].Pics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile_pic[0].Groups)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Profile_pic)
        {
            <tr>
                <td>
                    <img src="/profile_pic/@Html.DisplayFor(modelItem => item.Pics)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Groups)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
